@model RoleSearch
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <h4 class="page-title">角色管理</h4>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <form id="searchForm" asp-action="DoList" asp-controller="Role" data-ajax="true" data-ajax-update="#list" data-ajax-mode="replace" data-ajax-method="post">
                            <div class="row">
                                <div class="col-lg-3">
                                    <div class="mb-3">
                                        <input asp-for="@Model.Keyword" class="form-control" placeholder="角色名" autocomplete="off">
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="d-flex justify-content align-items-center gap-2">
                                        <button type="button" class="btn btn-outline-primary" title="添加" data-css="modal-lg" data-src="@Url.Action("Create","Role")">
                                            添加
                                        </button>
                                        <button type="submit" class="btn btn-outline-primary">
                                            搜索
                                        </button>
                                        <button type="reset" class="btn btn-outline-primary">
                                            重置
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div id="list">
                        @Html.Action("DoList", Model)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
