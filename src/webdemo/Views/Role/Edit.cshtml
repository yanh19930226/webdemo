@model Role
@{
    Layout = null;
}
<form id="addForm" asp-action="DoEdit" asp-controller="Role" data-ajax-method="post" data-ajax="true" data-ajax-complete="completed">
    <div class="modal-body">
        <input type="hidden" asp-for="@Model.Id" />
        <input type="hidden" asp-for="@Model.CreateTime" />
        <input type="hidden" asp-for="@Model.IsDel" />
        <div class="mb-3">
            <label asp-for="@Model.RoleName" class="form-label">角色名称</label>
            <input asp-for="@Model.RoleName" type="text" class="form-control" autocomplete="off">
            <span asp-validation-for="@Model.RoleName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.RoleCode" class="form-label">角色编码</label>
            <input asp-for="@Model.RoleCode" type="text" class="form-control" autocomplete="off">
            <span asp-validation-for="@Model.RoleCode" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Remark" class="form-label">备注</label>
            <input asp-for="@Model.Remark" type="text" class="form-control" autocomplete="off">
            <span asp-validation-for="@Model.Remark" class="text-danger"></span>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-light" data-dismiss="modal">取消</button>
        <button type="submit" class="btn btn-primary">保存</button>
    </div>
</form>

<script>
    completed = function (xhr) {
        var rv = JSON.parse(xhr.responseText);
        if (rv.isSuccess) {
            console.log(xhr);
            $.tipsOk(rv.message);
            setTimeout(function () {
                window.location.reload();
            }, 2000);
        } else {
            $.tipsError(rv.message);
        }
    };
</script>
