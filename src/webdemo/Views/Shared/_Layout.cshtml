<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Bootstrap 5 Admin Template</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="~/assets/vendor/jquery/jquery.min.js"></script>
    <script src="~/assets/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/assets/vendor/daterangepicker/daterangepicker.js"></script>
    <script src="~/assets/js/config.js"></script>
    <link rel="shortcut icon" href="~/assets/images/favicon.ico" />
    <link href="~/assets/vendor/daterangepicker/daterangepicker.css" rel="stylesheet" />
    <link href="~/assets/vendor/admin-resources/jquery.vectormap/jquery-jvectormap-1.2.2.css" rel="stylesheet" />
    <link href="~/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/app.css" rel="stylesheet" type="text/css" id="app-style" />
    <link href="~/lib/sco/scojs.css" rel="stylesheet" />
</head>

<body>
    <div class="wrapper">
        <!-- header -->
        @await Component.InvokeAsync("Header")
        <!-- / header -->

        <!-- menu -->
        @await Component.InvokeAsync("Menu")
        <!-- / menu -->

        <!-- content -->
        <div class="content-page">
            @RenderBody()
        </div>
        <!-- / content -->

        <!-- footer -->
        @await Component.InvokeAsync("Footer")
        <!-- / footer -->
    </div>

    <!-- assets -->
    <script src="~/assets/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="~/assets/vendor/admin-resources/jquery.vectormap/jquery-jvectormap-1.2.2.min.js"></script>
    <script src="~/assets/vendor/admin-resources/jquery.vectormap/maps/jquery-jvectormap-world-mill-en.js"></script>
    <script src="~/assets/js/app.js"></script>
    <script src="~/assets/js/vendor.min.js"></script>
    <!-- / assets -->
    <!-- lib -->
    <script src="~/lib/sco/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/lib/sco/sco.confirm.js"></script>
    <script src="~/lib/sco/sco.message.js"></script>
    <script src="~/lib/sco/sco.modal.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/mvccorepager/mvccorepager.min.js"></script>
    <script src="~/lib/mainscript.js"></script>
    <!-- / lib -->
    @RenderSection("Scripts", required: false)
</body>
</html>