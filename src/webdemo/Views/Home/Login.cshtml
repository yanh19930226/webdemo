@{ Layout = null; }
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>后台内容管理系统</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="/res/css/bootstrap.css">
    <link rel="stylesheet" href="/res/css/font-awesome.min.css">
    <link rel="stylesheet" href="/res/css/style.css">
    <link rel="stylesheet" href="/res/css/plugin.css">
    <link rel="stylesheet" href="/res/sco/scojs.css">
    <link href="/res/css/main.css" rel="stylesheet" />
    <link rel="stylesheet" href="/res/css/landing.css">
    <script src="/res/js/jquery.js"></script>
    <style>
        .login-panel {
            height: calc(100vh - 50px);
            margin-bottom: 0;
        }
        #content {
            top: 40%;
            transform: translateY(-50%);
        }
        #footer {
            margin-top: 0px;
        }
    </style>
</head>
<body>
    <header id="header" class="navbar bg bg-black">
    </header>
    <section class="panel login-panel">
        <section id="content">

            <div class="main padder">

                <div class="row">

                    <div class="col-lg-4 col-offset-4 m-t-large">

                        <section class="panel">
                            <form asp-action="DoLogin" asp-controller="Home" method="post" class="padder">
                                <div class="block">
                                    <label class="control-label">用户</label>
                                    <input type="text" name="UserName" placeholder="请输入您的账号" class="form-control">
                                </div>
                                <div class="block">
                                    <label class="control-label">密码</label>
                                    <input type="password" name="Password" placeholder="请输入您的密码" class="form-control">
                                </div>
                                <div class="block">
                                    <button type="submit" class="btn btn-info" style="width:50%;margin-top:10px; float:left">登录</button>
                                    <button type="button" data-src="/Home/Register" class="btn btn-info" style="width:50%;margin-top:10px;float:left">注册</button>
                                </div>
                            </form>
                        </section>
                    </div>
                </div>
            </div>
        </section>
    </section>
    <script src="/res/js/bootstrap.js"></script>
    <script src="/res/js/app.js"></script>
    <script src="~/res/sco/sco.confirm.js"></script>
    <script src="~/res/sco/sco.message.js"></script>
    <script src="~/res/sco/sco.modal.js"></script>
    <script src="~/lib/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/res/js/box.js"></script>
    <script src="/res/js/MainScript.js?1=1"></script>
</body>
</html>