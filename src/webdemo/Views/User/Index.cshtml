@model UserSearch
<section class="main padder">
    <div class="clearfix">
        <h4><i class="icon-edit"></i>用户管理</h4>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <section class="toolbar clearfix m-t-large m-b">
                <a title="添加用户" data-src="/User/Add" class="btn btn-info btn-circle active"><i class="icon-plus"></i>添加用户</a>
            </section>
        </div>
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    用户列表
                </header>

                <div class="row text-small">
                    <form asp-action="DoList" id="searchForm" asp-controller="User" data-ajax="true" data-ajax-update="#divlist" data-ajax-mode="replace" data-ajax-method="post">
                        <div class="col-lg-8 m-b-mini">
                            <input asp-for="@Model.Keyword" class="input-small inline form-control" style="width:330px" placeholder=" 用户名称" />
                            <button type="submit" class="btn btn-small  btn-inverse">
                                查询
                            </button>
                        </div>
                    </form>
                </div>
                <div id="divlist">
                    @Html.Action("DoList", Model)
                </div>
            </section>
        </div>
    </div>
</section>

